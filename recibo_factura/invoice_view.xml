<?xml version="1.0"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="account_invoice_codigo">
            <field name="name">account.invoice.codigo</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="model">account.invoice</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="replace">
                            <field name="payment_term_id" attrs="{'invisible': [('partner_id','=',6350)]}" required="1"/>
                </xpath>
                <xpath expr="//field[@name='date_due']" position="replace"/>

                <xpath expr="//field[@name='payment_term_id']" position="after">
                            <field name="date_due" attrs="{'invisible': [('partner_id','=',6350)]}" required="1"/>
                </xpath>
            </field>
        </record>



        <!--record model="ir.ui.view" id="account_invoice_codigo_filter">
            <field name="name">account.invoice.codigo</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="model">account.invoice</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="after">
                            <field name="codigo" />
