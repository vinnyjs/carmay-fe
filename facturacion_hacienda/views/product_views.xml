<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="product_template_only_form_view_inherit" model="ir.ui.view">
			<field name="name">product.template.product.form.inherit</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_only_form_view"/>
			<field name="arch" type="xml">
				<field name="type" position="after">
					<field name="code_type_id" required="1"/>
				</field>
				<field name="uom_po_id" position="after">
					<field name="commercial_measurement"/>
				</field>
			</field>
		</record>

		<record id="product_product_only_form_view_inherit" model="ir.ui.view">
			<field name="name">product.product.product.form.inherit</field>
			<field name="model">product.product</field>
			<field name="inherit_id" ref="product.product_normal_form_view"/>
			<field name="arch" type="xml">
				<field name="type" position="after">
					<field name="code_type_id" required="1"/>
				</field>
				<field name="uom_po_id" position="after">
					<field name="commercial_measurement"/>
				</field>
			</field>
		</record>

		<record id="product_uom_form_view_inherit" model="ir.ui.view">
			<field name="name">product.uom.form.inherit</field>
			<field name="model">product.uom</field>
			<field name="inherit_id" ref="product.product_uom_form_view"/>
			<field name="arch" type="xml">
				<field name="name" position="after">
					<field name="commercial_measurement_id" required="1" options="{'no_create': 1, 'no_create_edit': 1}"/>
					<field name="code" readonly="1"/>
				</field>
			</field>
		</record>

    </data>
</odoo>