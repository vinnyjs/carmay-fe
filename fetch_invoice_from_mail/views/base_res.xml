<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="view_company_form_inherit" model="ir.ui.view">
			<field name="name">res.company.form.inherit</field>
			<field name="model">res.company</field>
			<field name="inherit_id" ref="base.view_company_form"/>
			<field name="arch" type="xml">

				<!--INICIO HERENCIA BRYAN-->

				<page position="after">
                    <page string="Datos Correo IMAP">
                        <group>
                            <field name="host_imap_server_fe" required="0"/>
                            <field name="port_imap_server_fe" required="0"/>
                        </group>
                        <group>
                            <field name="user_imap_server_fe" required="0"/>
                            <field name="pass_imap_server_fe" required="0"/>
                            <field name="filter_by"/>
                            <field name="date_from" attrs="{'required': [('filter_by', '=', 'date')], 'invisible': [('filter_by', '!=', 'date')]}"/>
                        </group>
                    </page>
                </page>

				<!--FIN HERENCIA BRYAN-->

			</field>
		</record>

    </data>
</odoo>