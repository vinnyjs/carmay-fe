<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="load_zip_form" model="ir.ui.view">
			<field name="name">load.zip.form</field>
			<field name="model">load.zip</field>
			<field name="arch" type="xml">
                <form string="Formulario">
                    <group>
                        <group>
                            <field name="fname_archivo" invisible="1"/>
                            <field name="archivo" filename="fname_archivo" required="1"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Procesar Archivo" name="procesar" type="object" default_focus="1"  class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>

                </form>
			</field>
		</record>

        <record id="load_zip_form_action" model="ir.actions.act_window">
            <field name="name">Procesar Carpeta</field>
            <field name="res_model">load.zip</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem action="load_zip_form_action" id="menu_load_zip_form_action_action" parent="account.menu_finance_payables" sequence="10" groups="base.group_no_one" />


	</data>
</odoo>
